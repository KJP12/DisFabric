{
  "schemaVersion": 1,
  "id": "disfabric",
  "version": "${version}",

  "name": "DisFabric",
  "description": "A barebones Discord <-> Minecraft chat bridge.",
  "authors": [
    "BRForgers Team",
    "armelin1",
    "D4rkness_King",
    "jonatsp"
  ],
  "contact": {
    "homepage": "https://github.com/BRForgers/DisFabric",
    "sources": "https://github.com/BRForgers/DisFabric"
  },

  "environment": "server",
  "entrypoints": {
    "markdown-chat": [
      "br.com.brforgers.mods.disfabric.MarkdownBootstrap"
    ],
    "server": [
      "br.com.brforgers.mods.disfabric.DisFabric"
    ]
  },
  "mixins": [
    "disfabric.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=0.12.8",
    "fabric": "*",
    "fabric-language-kotlin": "*",
    "markdown_chat": "*",
    "minecraft": "1.19.x",
    "java": ">=17"
  },
  "recommends": {
    "server_translations_api": "<=1.4.14+1.19-rc2",
    "fabrictailor": ">=1.9.0"
  },
  "breaks": {
    "server_translations_api": "1.4.15+1.19||1.4.16+1.19",
    "fabrictailor": "<1.9.0"
  }
}
